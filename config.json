{
  "steam": {
    //the userdata directory. If null Nostegma will try to locate it automatically, but if it fails you may want to set this value manually
    "userdataDir": null
  },
  "backup": {
    //whether or not to backup the shortcuts.vdf-file. Default true.
    "shortcuts": true,
    //whether or not to backup grids. Default true.
    "grids": true,
    //where to store backups. Default is in %tmp%/nostegma/backups/
    "dir": null
  },
	//configuration for logging. See log4js.json for more options.
  "log": {
		//which appenders described in log4js.json to use. Default is ["console","nostegma"]
		"appenders": ["console","nostegma"],
    //where to store the log files. Default is %tmp%/nostegma/logs/
    "dir": null
  }
}
